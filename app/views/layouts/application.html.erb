<!DOCTYPE html>
<html>
<head>
  <title>Pick a Branch</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= @page_title || t('.title') %>
    <div id="columns">
      <ul>
        <%= link_to 'Home', admin_path %>
      </ul>

      <% if session[:user_id] %>
        <ul>
          <%= link_to 'Logout', logout_path, :method => :delete   %> | <%= link_to 'Update Info', edit_user_path(session[:user_id]) %>
        </ul>
      <% else %>
        <ul>
          <%= link_to 'Login', login_path %> | <%= link_to 'Register', new_user_path %>
        </ul>
      <% end %>
    </div>
  </div>

  <div id="columns">
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
