<h1>Existing user</h1>
<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset id="box">
      <legend>Please Log In</legend>

      <div>
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name], :size => 25 %>
      </div>

      <div>
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
  
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
